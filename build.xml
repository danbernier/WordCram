<!-- TODO put in a step to warn about files that are missing the ASL notice -->

<project default="deploy">

	<property file="build.credentials.properties" />
	<property file="build.properties" />
	
	<taskdef classname="net.bluecow.googlecode.ant.GoogleCodeUploadTask" classpath="${ant.googlecode.jar.path}" name="gcupload" />
	
	<property name="classpath" value="${processing.home}/lib/core.jar" />

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="build/classes" />
		<javac srcdir="src" destdir="build/classes" classpath="${classpath}" includeantruntime="false" />
	</target>

	<target name="test" depends="compile">
		<mkdir dir="build/tests" />
		<javac srcdir="test" destdir="build/tests" classpath="${classpath};${junit.jar.path};build/classes" includeantruntime="false" />
		<junit dir="build/tests">
			<classpath path="${junit.jar.path}" />
		</junit>
	</target>

	<target name="deploy" depends="test">
		<mkdir dir="build/jar/wordcram/library" />
		<jar destfile="build/jar/wordcram/library/wordcram.jar" basedir="build/classes" />
	</target>

	<target name="publish" depends="deploy">
		<tar destfile="build/wordcram.tar" basedir="build/jar" />
		<zip destfile="build/wordcram.zip" basedir="build/jar" />
		<tstamp>
			<format property="date" pattern="yyyyMMdd" />
		</tstamp>
		<input message="Give us a quick summary for Google Code:" addproperty="publish.summary" />
		<gcupload
			username="${gc.username}" password="${gc.password}"
			projectname="wordcram" filename="build/wordcram.tar" 
			targetfilename="wordcram.${date}.tar" 
			summary="${publish.summary}" labels="development, unstable" />
		<gcupload 
			username="${gc.username}" password="${gc.password}"
			projectname="wordcram" filename="build/wordcram.zip" 
			targetfilename="wordcram.${date}.zip" 
			summary="${publish.summary}" labels="development, unstable" />
	</target>

	<target name="deploy.local" depends="deploy">
		<copy todir="${processing.sketchFolder}/libraries/wordcram">
			<fileset dir="build/jar/wordcram" />
		</copy>
	</target>

</project>
